<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/simple_exo_view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />



    <TextView
        android:id="@+id/description_title"
        android:layout_below="@+id/simple_exo_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/step_description_title"
        android:textSize="19sp"
        />


    <TextView
        android:id="@+id/test_text_view"
        android:layout_below="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/test_recipe_step"
        android:textSize="17sp"
        android:textColor="#000"
        />



    <TextView
        android:id="@+id/prev_step_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/prev_title"
        android:textStyle="italic"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="displayPreviousStep"
        />

    <TextView
        android:id="@+id/next_step_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/next_title"
        android:textStyle="italic"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="displayNextStep"
        />
</RelativeLayout>